<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Mahasiswa"
        android:textSize="35dip"
        android:id="@+id/textView7"
        style="@style/Base.TextAppearance.AppCompat"
        android:textColor="#2486b4"
        android:textAlignment="center" />

    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"

        android:text="Delete"
        android:background="#f73b3b" />
  <!-- Nama -->
    <TextView android:id="@+id/npm_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dip"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:textColor="#43bd00"/>
  <TextView android:id="@+id/name_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25dip"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:textColor="#43bd00"/>
  <!-- Email  -->
  <TextView android:id="@+id/email_label"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="25dip"
      android:textStyle="bold"
      android:gravity="center"
      android:paddingBottom="5dip"
      android:textColor="#43bd00"/>
  <!-- No. Handphone -->
  <TextView android:id="@+id/mobile_label"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="25dip"
      android:textStyle="bold"
      android:gravity="center"
      android:paddingBottom="5dip"
      android:textColor="#43bd00"/>

    <EditText android:id="@+id/tugas_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/kuis_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:digits="0123456789."
        android:maxLength="3"
        android:inputType="numberDecimal"
        android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/uts_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:digits="0123456789."
        android:maxLength="3"
        android:inputType="numberDecimal"
        android:layout_gravity="center_horizontal" />

    <EditText android:id="@+id/uas_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="Back"
            android:layout_weight="0.47" />
        <Button
            android:id="@+id/submit_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6b7fc8"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="Submit"
            android:layout_weight="0.60" />

       </LinearLayout>
</LinearLayout>